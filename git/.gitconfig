[user]
	email = rafal.dittwald@gmail.com
	name = Rafal Dittwald
[core]
	excludesFile = ~/.gitignore
	editor = nvim
[init]
	defaultBranch = master
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[merge]
	ff = no
	conflictstyle = zdiff3
[pull]
	ff = yes
[diff]
	algorithm = histogram
